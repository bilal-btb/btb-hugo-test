body{margin:0 auto;font-family:sans-serif}.container{width:75%;margin:0 auto}.container-sections{display:grid;grid-template-columns:1fr 1fr;gap:100px}header{background-color:#fbf3e4;padding:25px}header .header-container{display:grid;grid-template-columns:1fr 1fr;color:#000;width:90%;margin:0 auto}header .header-container .right{text-align:right}header .header-container .logo-img{width:160px;height:auto;display:block}.casestudy-hero-section{background:#fbf3e4;padding:50px;text-align:center}.casestudy-body{padding:50px}.casestudy-body .container-sections{grid-template-columns:4fr 1fr}.casestudy-highlight-section{background:#16140c;padding:50px;color:#fff}.casestudy-highlight-section .highlight-title{text-transform:uppercase}.casestudy-highlight-section .highlight-header{font-weight:700;font-size:20px}.casestudy-related-section{background:#e5dfd6;padding:50px}.casestudy-related-section .related-title{text-transform:uppercase}.casestudy-related-section .related-list{display:flex;gap:3%;margin:0;padding:0}.casestudy-related-section .related-box{width:30%;text-align:center;border:1px solid #ccc;background-color:#fff;box-shadow:0 4px 8px rgba(0,0,0,.1);list-style:none}.casestudy-related-section .related-box img{max-width:100%;height:auto;margin:0}.casestudy-related-section .related-headline-div{height:250px;font-size:24px;font-weight:700;margin-bottom:0;padding:0 40px;display:flex;justify-content:center;align-items:center;background:#fbf3e4}.casestudy-listing-list{margin:0;padding:0}.casestudy-listing-box{border:1px solid #ccc;box-shadow:0 4px 8px rgba(0,0,0,.1);list-style:none;margin:30px 0;display:flex}.casestudy-listing-box img{width:auto;height:200px;margin:0}.casestudy-listing-box-headline-div{width:100%;font-size:24px;font-weight:700;padding:0 40px;display:flex;align-items:center;background:#fbf3e4}.about-hero-section{background:#fbf3e4;padding:50px;text-align:center}.about-body{padding:50px}nav{padding:25px;background:#fbf3e4}nav ul{list-style:none;text-align:center}nav ul a{color:#000;text-decoration:none;padding:0 50px;font-size:20px;font-weight:600}nav ul a:hover{text-decoration:underline}nav ul li{display:inline}footer{background:#fbf3e4;text-align:center;color:#000;padding:25px}